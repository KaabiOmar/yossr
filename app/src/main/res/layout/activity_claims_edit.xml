<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.claims.ClaimsEdit">

    <!-- Editable Fields -->
    <EditText
        android:id="@+id/editClaimSubjectEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Claim Subject"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/colorPrimary"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/editClaimDescriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/colorPrimary"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@android:color/black"/>

    <!-- Edit and Cancel Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Edit Button -->
        <Button
            android:id="@+id/editClaimButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit"
            android:onClick="onEditProductClick"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"/>

        <!-- Cancel Button -->
        <Button
            android:id="@+id/cancelEditButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:onClick="onCancelEditClick"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>
